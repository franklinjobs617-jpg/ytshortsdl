generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  googleUserId String?   @unique @map("google_user_id")
  email        String?   @unique
  name         String?
  givenName    String?   @map("given_name")
  familyName   String?   @map("family_name")
  picture      String?
  score        String?   @default("3") // 对应积分情况
  credits      String?   @default("5") // 对应剩余点数
  accessToken  String?   @map("access_token") @db.Text
  createTime   DateTime? @default(now()) @map("create_time")
  updateTime   DateTime? @updatedAt @map("update_time")
  ip           String?
  type         String?   @default("1")

  // 关联支付表
  payments Pay[]
  usage    Usage?
  survey   Survey?

  @@map("google_user")
}

model Usage {
  id      Int     @id @default(autoincrement())
  userId  Int?    @unique @map("user_id") // 登录用户ID
  guestId String? @unique @map("guest_id") // 游客唯一标识（IP哈希或设备指纹）

  // 等级逻辑
  plan       String    @default("FREE") // "FREE", "PRO", "ELITE"
  expireTime DateTime? @map("expire_time") // 订阅到期时间，到期后 plan 自动视为 FREE

  // 本月已使用计数（每月重置）
  downloadCount   Int @default(0) @map("download_count")
  extractionCount Int @default(0) @map("extraction_count")
  summaryCount    Int @default(0) @map("summary_count")

  // 重置逻辑
  lastResetMonth Int     @map("last_reset_month") // 记录上次重置的月份 (1-12)
  lastResetYear  Int     @map("last_reset_year") // 记录上次重置的年份 (如 2026)
  lastResetDate  String? @map("last_reset_date") // 存储格式如 "2026-01-26"

  createTime DateTime @default(now()) @map("create_time")
  updateTime DateTime @updatedAt @map("update_time")

  user User? @relation(fields: [userId], references: [id])

  @@map("google_ytshort_usage")
}

model Pay {
  id            Int       @id @default(autoincrement())
  userId        Int?      @map("user_id")
  googleUserId  String?   @map("google_user_id")
  email         String?
  orderNo       String?   @map("order_no")
  checkoutUrl   String?   @map("checkout_url") @db.Text
  orderRequest  String?   @map("order_request") @db.Text
  orderResponse String?   @map("order_response") @db.Text
  retUrl        String?   @map("ret_url")
  cancelUrl     String?   @map("cancel_url")
  orderId       String?   @map("order_id")
  status        String?   @default("1") // 1.待支付 2.支付成功
  type          String? // 套餐类型
  businessType  String?   @map("business_type") // 3:stripe
  remark        String?
  amount        String?
  ip            String?
  timestamp     String?
  createTime    DateTime? @default(now()) @map("create_time")
  updateTime    DateTime? @updatedAt @map("update_time")

  user User? @relation(fields: [userId], references: [id])

  @@map("pay")
}

// 调查问卷模型
model Survey {
  id         Int      @id @default(autoincrement())
  userId     Int      @unique @map("user_id") // 每个用户只能填一次，用于防止刷积分
  purpose    String? // 使用目的：Content Creation, Learning...
  source     String? // 来源：Google, TikTok...
  rating     Int? // 评分：1-5
  createTime DateTime @default(now()) @map("create_time")

  user User @relation(fields: [userId], references: [id])

  @@map("google_ytshort_survey")
}
